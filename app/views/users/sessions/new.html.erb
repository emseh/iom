<section class="hold-transition login-page">
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <%= image_tag "qn-logo.png", style: 'margin: 10px;' %>
        <a href="#" class="h3"><b>Internal Office </b>Memorandum</a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <%= simple_form_for resource, html: {novalidate: false}, as: resource_name, url: session_path(resource_name) do |f| %>
          <div class="input-group mb-3">
            <%= f.input :email, label: false, placeholder: 'Email address', required: true, autofocus: true, input_html: { class: 'form-control' } %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <%= f.input :password, label: false, placeholder: 'Password', required: true, input_html: { class: 'form-control' } %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">
                <%= f.input :remember_me, as: :boolean, label_html: { for: 'remember' }, input_html: { id: 'remember' } %>
              </div>
            </div>
            <div class="col-4">
              <%= f.button :submit, "Sign in", class: "btn btn-primary btn-block" %>
            </div>
          </div>
        <% end %>
        <br>
        <p class="mb-1">
          <a href="<%= new_password_path(resource_name) %>">I forgot my password</a>
        </p>
        <p class="mb-0">
          <!--<a href="<%#= new_registration_path(resource_name) %>" class="text-center">Register a new membership</a>-->
        </p>
      </div>
    </div>
  </div>
</section>
