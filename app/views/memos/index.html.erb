<div id="memos">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Declare Category List</h3>
      <%= link_to new_memo_path, class: 'btn btn-success btn-sm float-right' do %>
        <i class="fa fa-plus-square"></i> New
      <% end %>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="memos-table" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @memos.each do |memo| %>
            <%= render memo %>
          <% end %>
        </tbody>
      </table>
      <%= paginate @memos %>
      <div class="mt-2">
        <%= page_entries_info @memos %>
      </div>
    </div>
  </div>
</div>
