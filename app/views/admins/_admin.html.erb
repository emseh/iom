<div id="<%= dom_id admin %>">
  <tr>
    <td><%= admin.email %></td>
    <td><%= admin.user_information&.full_name %></td>
    <td><%= admin.user_information&.phone_number %></td>
    <td>
      <%= link_to admin_path(admin), class: 'btn btn-secondary btn-sm' do %>
        <i class="fas fa-eye"></i> Show
      <% end %>
      <%= link_to edit_admin_path(admin), class: 'btn btn-primary btn-sm ml-2' do %>
        <i class="fas fa-pencil-alt"></i> Edit
      <% end %>
      <%= link_to admin_path(admin), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </td>
  </tr>
</div>
