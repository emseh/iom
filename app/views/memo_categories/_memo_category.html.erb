<div id="<%= dom_id memo_category %>">
  <tr>
    <td><%= memo_category.name %></td>
    <td>
      <%= link_to memo_category_path(memo_category), class: 'btn btn-secondary btn-sm' do %>
        <i class="fas fa-eye"></i> Show
      <% end %>
      <%= link_to edit_memo_category_path(memo_category), class: 'btn btn-primary btn-sm ml-2' do %>
        <i class="fas fa-pencil-alt"></i> Edit
      <% end %>
      <%= link_to memo_category_path(memo_category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </td>
  </tr>
</div>