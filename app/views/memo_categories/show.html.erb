<div class="card">
  <div class="card-header">
    <h3 class="card-title">Declare Category Details</h3>
  </div>
  <!-- /.card-header -->
  <div class="card-body">
    <table class="table table-bordered table-striped" id="<%= dom_id(@memo_category) %>">
      <tbody>
        <tr>
          <td><strong>Name</strong></td>
          <td><%= @memo_category.name %></td>
        </tr>
        <tr>
          <td colspan="3" class="text-right">
            <%= link_to memo_categories_path, class: 'btn btn-secondary btn-sm' do %>
              <i class="fa fa-chevron-left"></i> Back
            <% end %>
            <%= link_to edit_memo_category_path(@memo_category), class: 'btn btn-primary btn-sm ml-2' do %>
              <i class="fas fa-pencil-alt"></i> Edit
            <% end %>
            <%= link_to memo_category_path(@memo_category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' do %>
              <i class="fas fa-trash"></i> Delete
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- /.card-body -->
</div>
