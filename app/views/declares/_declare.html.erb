<div id="<%= dom_id declare %>">
  <tr>
    <td><%= declare&.user&.user_information&.full_name %></td>
    <td><%= declare&.declare_category&.name %></td>
    <td><%= declare&.status %></td>
    <td><%= declare&.description %></td>
    <td><%= declare&.created_at %></td>
    <td>
      <%= link_to declare_path(declare), class: 'btn btn-secondary btn-sm' do %>
        <i class="fas fa-eye"></i> Show
      <% end %>
      <%= link_to edit_declare_path(declare), class: 'btn btn-primary btn-sm ml-2' do %>
        <i class="fas fa-pencil-alt"></i> Edit
      <% end %>
      <%= link_to declare_path(declare), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm ml-2' do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </td>
  </tr>
</div>